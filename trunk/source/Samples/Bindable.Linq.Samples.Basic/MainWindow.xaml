    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Bindable LINQ Samples" 
    Width="300"
    Height="300" 
    >
    <StackPanel Margin="30">
        <Button Click="StandardLinqButton_Click">Standard LINQ</Button>
        <Button Click="SyncLinqObjectsButton_Click">Bindable LINQ over Objects</Button>
        <Button Click="SyncLinqToSqlButton_Click">Bindable LINQ over LINQ-to-SQL</Button>
        <Button Click="SyncLinqGroupingButton_Click">Bindable LINQ Grouping</Button>
        <Button Click="SyncLinqFilteringButton_Click">Bindable LINQ Filtering</Button>
    </StackPanel>
</Window>
